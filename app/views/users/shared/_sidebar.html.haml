.user-page__sidebar
  %ul.user-page__sidebar--navigation
    %li.nav-list.first-list
      = link_to user_path(current_user.id), class: "user-navigation" do
        = icon('fas', 'user', class: "nav-icon")
        %span<>
        %p.nav-destination
          マイページ
    %li.nav-list
      = link_to learning_user_path(current_user.id), class: "user-navigation" do
        = icon('fas', 'tags', class: "nav-icon")
        %span<>
        %p.nav-destination
          学習中のカテゴリー
    %li.nav-list
      = link_to tags_path(current_user.id), class: "user-navigation" do
        = icon('fas', 'cog', class: "nav-icon")
        %span<>
        %p.nav-destination
          学習項目を登録する
    %li.nav-list
      = link_to report_path(current_user.id), class: "user-navigation" do
        = icon('fas', 'calendar', class: "nav-icon")
        %span<>
        %p.nav-destination
          学習履歴











