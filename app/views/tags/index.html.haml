    .register-tag__search
      %input.register-tag__search--input
      = icon('fas', 'search', class: "search-icon")
      %span<>
      -# = form_for (url: search_tags_path, local: true, method: :get) do |f|
      -#   = f.text_field :keyword, placeholder: "キーワードから探す", type: "text", class: "input-area"
